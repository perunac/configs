hardstatus alwayslastline "%{b kw}%{r}%1` %{-b kw}%u %-Lw%{= rW}%50> %n%f %t %{-}%+Lw%<"
shell -${SHELL}
altscreen on
defscrollback 30000
termcapinfo xterm ti@:te@
